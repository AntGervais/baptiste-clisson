---
import { Picture } from '@astrojs/image/components';

import { REALISATIONS } from '~/config.mjs';
import type { Post } from '~/types';

import { findImage } from '~/utils/images';
import { getPermalink } from '~/utils/permalinks';

export interface Props {
  post: Post;
}

const { post } = Astro.props;
const image = await findImage(post.image);
---

<article class="mb-6 transition">
  <div class="relative mb-6 rounded bg-gray-400 shadow-lg md:h-64">
    {
      image && (
        <Picture
          src={image}
          class="w-full rounded bg-gray-400 shadow-lg md:h-full md:w-auto md:object-cover "
          widths={[400, 900]}
          width={400}
          height={224}
          sizes="(max-width: 900px) 400px, 900px"
          alt={post.title}
          aspectRatio="16:9"
          loading="lazy"
          decoding="async"
        />
      )
    }
  </div>
  <h3 class="mb-2 font-heading text-xl font-bold leading-tight sm:text-2xl">
    {
      REALISATIONS?.post?.disabled ? (
        post.title
      ) : (
        <a href={getPermalink(post.permalink, 'post')} class="hover:text-primary   transition duration-200 ease-in">
          {post.title}
        </a>
      )
    }
  </h3>
  <p class="text-muted text-lg">{post.description}</p>
</article>
