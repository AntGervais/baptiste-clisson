---
import { Picture } from '@astrojs/image/components';

import { REALISATIONS } from '~/config.mjs';
import type { Realisation } from '~/types';

import { findImage } from '~/utils/images';
import { getPermalink } from '~/utils/permalinks';
import Tags from '~/components/realisations/Tags.astro';

export interface Props {
  post: Realisation;
}

const { post } = Astro.props;
const image = await findImage(post.image);

const link = !REALISATIONS?.post?.disabled ? getPermalink(post.permalink, 'realisations') : '';
---

<article class="mb-6 transition hover:scale-105">
  <div class="flex justify-center">
    <div class="block max-w-sm rounded-sm bg-white shadow-lg">
      <a href={link}>
        {
          image && (
            <Picture
              src={image}
              class="w-full object-cover object-center md:h-72 lg:h-80"
              widths={[480]}
              width={480}
              height={240}
              sizes="(max-width: 480px) 240px, 480px"
              alt={post.title || post.accroche || ''}
              aspectRatio="4:3"
              loading="lazy"
              decoding="async"
            />
          )
        }

        <div class="p-6 pb-4">
          <h2 class="mb-3 text-lg font-bold">
            {post.title}
          </h2>
          <p class="mb-3 leading-relaxed">
            {post.accroche}
          </p>
          <div class="flex flex-wrap items-center">
            <a class="inline-flex items-center text-accent md:mb-2 lg:mb-0" href={link}
              >Voir plus de photos
              <svg
                class="ml-2 h-4 w-4"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M5 12h14"></path>
                <path d="M12 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>

          <div class="pt-6">
            <Tags tags={post.tags} />
          </div>
        </div>
      </a>
    </div>
  </div>
</article>
