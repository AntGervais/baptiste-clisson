---
import { AccueilCategories } from '~/types';

export interface Props {
  categorie: AccueilCategories;
}

const { categorie } = Astro.props;
---

<header class="mx-auto mb-8 max-w-3xl md:mb-16">
  {
    categorie && categorie.title && (
      <h1 class="leading-tighter font-heading text-accent text-4xl capitalize md:text-5xl" set:html={categorie.title} />
    )
  }
  {
    categorie.Content && (
      <div class="categorie-content mx-auto mt-3 text-xl font-medium md:mt-6">
        {/* @ts-ignore */}
        <categorie.Content />
      </div>
    )
  }
</header>
