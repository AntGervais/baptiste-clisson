---
import { getPermalink } from '~/utils/permalinks';

import { REALISATIONS } from '~/config.mjs';
import type { Realisation } from '~/types';

export interface Props {
  tags: Realisation['tags'];
  class?: string;
}

const { tags, class: className = 'text-base' } = Astro.props;
---

{
  tags && Array.isArray(tags) && (
    <div class={className}>
      {tags.map(
        (tag) =>
          tag && (
            <div class="mb-2 mr-2 inline-block rounded-sm bg-gray-100 font-medium  lowercase text-primary hover:bg-accent hover:text-gray-100">
              {REALISATIONS?.tag?.disabled ? (
                tag
              ) : (
                <a class="px-2 text-sm capitalize" href={getPermalink(tag, 'tag')} title={tag}>
                  {tag}
                </a>
              )}
            </div>
          )
      )}
    </div>
  )
}
