---
export interface Props {
  title?: string;
  subtitle?: string;
  image?: string;
  link?: string;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  image = await Astro.slots.render('image'),
  link = await Astro.slots.render('link'),
} = Astro.props;
---

<article class="mb-6 transition">
  <div class="flex justify-center">
    <a href={link} class="transition hover:scale-105" title={title}>
      <div class="block w-full max-w-sm rounded-sm bg-white shadow-lg">
        <img class="h-80 w-96 rounded-t-sm object-cover" src={image} alt={title} />
        <div class="w-full p-4">
          <h2 class="text-xl">{title}</h2>
          {subtitle && <p class="text-sm">{subtitle}</p>}
        </div>
      </div>
    </a>
  </div>
</article>
