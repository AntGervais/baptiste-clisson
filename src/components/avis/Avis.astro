---
import Reviews from './Reviews';
import initialReviews from '~/initialReviews';
---

<div class="centered flex-col gap-32 py-16 lg:flex-row">
  <div class="flex flex-col lg:gap-8">
    <div class="text-center">
      <h2 class="mb-4 font-heading text-4xl font-bold text-secondary">
        Votre satisfaction est notre moteur au quotidien
      </h2>
    </div>
  </div>

  <div class="container mx-auto">
    <div class="flex flex-wrap">
      <div class="w-full shrink-0 grow-0 basis-auto p-5 lg:w-5/12">
        <img
          class="rounded-sm object-cover"
          src="/images/images_stock/menuisier-travaillant-studio-crayon.webp"
          alt="menuisier travaillant studio crayon"
        />
      </div>

      <div class="w-full shrink-0 grow-0 basis-auto p-5 lg:w-7/12">
        <Reviews initialReviews={initialReviews} client:load />
      </div>
    </div>
  </div>
</div>
