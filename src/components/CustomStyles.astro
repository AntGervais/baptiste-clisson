---
import '@fontsource/inter/variable.css';

// Nunito
// Dosis
---

<style is:global>
  @font-face {
    font-family: 'Buenard';
    src: url('/fonts/Buenard-Regular.ttf') format('ttf');
    font-weight: normal;
    font-style: normal;
    font-display: block;
  }

  @font-face {
    font-family: 'Satisfy';
    src: url('/fonts/Satisfy-Regular.ttf') format('ttf');
    font-weight: normal;
    font-style: normal;
    font-display: block;
  }
  :root {
    --aw-font-sans: 'Buenard';
    --aw-font-serif: 'Satisfy';
    --aw-font-heading: var(--aw-font-serif);

    --aw-color-primary: #135a4c;
    --aw-color-secondary: #606c38;
    --aw-color-accent: #bc6c25;
    --aw-color-beige: #f4f7f0;
    --aw-color-text-page: #0d4037;
    --aw-color-text-muted: rgb(75 85 99);
    --aw-color-white: #fafafa;
  }
</style>
