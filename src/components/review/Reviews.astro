---
import { Image } from '@astrojs/image/components';
import initialReviews from '~/initialReviews';
import Reviews from './Reviews';
---

<div class="centered flex-col gap-32 py-8 lg:flex-row lg:py-10">
  <div class="flex flex-col lg:gap-8">
    <div class="text-center">
      <h2 class="mb-4 font-heading text-4xl text-secondary">Vos avis</h2>
    </div>
  </div>

  <div class="container mx-auto">
    <div class="flex flex-wrap">
      <div class="w-full shrink-0 grow-0 basis-auto p-5 lg:w-1/3">
        <Image
          src="/images/images_stock/menuisier-travaillant-studio-crayon.webp"
          class="rounded-sm object-cover"
          alt="menuisier travaillant studio crayon"
          width={590}
          height={443}
          loading="lazy"
          decoding="async"
        />
      </div>

      <div class="w-full shrink-0 grow-0 basis-auto p-4 lg:w-2/3">
        <Reviews initialReviews={initialReviews} client:load />
      </div>
    </div>
  </div>
</div>
